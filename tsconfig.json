{
  "compilerOptions": {
    "outDir": "build/dist",
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "ES6",
    "lib": ["es6", "dom"],
    "strict": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "types": ["typePatches"],
  "include": [
    "src",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "eslint.config.js",
    "postcss.config.ts",
    "tailwind.config.ts",
    "vite.config.ts"
  ]
}
